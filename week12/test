heckheck
#include <stdlib.h>
#include <stdio.h>
#include <stdint.h>
#include <stddef.h>
#include <string.h>

int main(int32_t argc, char **argv) {
	char fopm[] = "w";

	if(argc >= 2 && strcmp(argv[1], "-a") == 0) {
		strcpy(fopm, "a");
	}

	FILE **outfiles = calloc(argc, sizeof(FILE*));

	outfiles[0] = stdout;

	for(size_t i = 1; i < argc; i++) {
		outfiles[i] = fopen(argv[i], fopm);
		if(outfiles[i] == NULL) perror(argv[i]);
	}

	while(1) {
		int8_t bytein = fgetc(stdin);
		if(bytein == EOF) break;

		for(size_t i = 0; i < argc; i++) {
			fputc(bytein, outfiles[i]);
		}
	}


	for(size_t i = 1; i < argc; i++) {
		fclose(outfiles[i]);
	}
}
